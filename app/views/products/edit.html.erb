<div class="line"></div>

<h1>Редагувати продукт:</h1>

<%= javascript_include_tag :ckeditor %>

<% form_for @product, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Назва продукту:' %><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label 'Короткий опис:' %><br />
    <%= f.text_area :shortd %>
  </p>
  
  <p>
    <%= f.label 'Розширений опис:' %><br />
    <%= f.cktext_area :description, :language => "uk" %>
  </p>
  
  <p>
    <%= f.label 'Ціна:' %><br />
    <%= f.text_field :price %>
  </p>
  

  <p>
  	<%= f.label 'Змінити фото продукту:' %><br />
    <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit 'Змінити' %>
  </p>
<% end %>

<%= link_to 'Показати', @product %> |
<%= link_to 'Всі продукти', products_path %>